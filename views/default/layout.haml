!!! Strict
%html{:xmlns => 'http://www.w3.org/1999/xhtml', :'xml:lang' => configatron.site_language, :lang => configatron.site_language}
  %head
    %title= (!@title.blank? ? "#{@title} / " : '') + configatron.site_name
    %meta{:"http-equiv" => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'keywords', :content => ""}
    %meta{:name => 'description', :content => ""}
    %link{:rel => 'icon', :href => "#{configatron.directory_path}/favicon.ico"}
    %link{:href => "#{configatron.directory_path}/css/screen.css", :media => 'all', :rel => 'stylesheet', :type => 'text/css'}
    %script{:type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js'}
    %script{:type => 'text/javascript', :src => "#{configatron.directory_path}/js/sprintf.js"}
    %script{:type => 'text/javascript', :src => "#{configatron.directory_path}/js/jquery.loctime.js"}
    %script{:type => 'text/javascript', :src => "#{configatron.directory_path}/js/application.js"}

  %body
    #container.rel
      %h1
        - if (request.env['REQUEST_PATH'] || request.env['REQUEST_URI'] || '').match(/^\/admin/i)
          %a{:href => "#{configatron.directory_path}/admin"} #{configatron.site_name} Admin Area
        - else
          %a{:href => "#{configatron.directory_path}/"}= configatron.site_name

      #content
        = yield

      %a#bird.abs{:href => "#{configatron.directory_path}/"}
        %img{:src => "#{configatron.directory_path}/images/twitter_bird.png", :title => configatron.site_name, :alt => ''}

      #footer
        %p Copyfree &amp; open-sourced by <a href='http://www.gleuch.com'>Greg Leuch</a>, <a href='http://www.theowatson.com'>Theo Watson</a>, and the <a href='http://www.fffff.at'>Free Art and Technology Lab</a>.
        %p
          %strong <a href='http://www.github.com/gleuch/twitter-fileshare'>Get the code</a> and start seeding!
        %p{:style => 'padding-top: 8px;'}
          %small Powered by <a href='http://tweetfil.es'>tweetfil.es</a>.